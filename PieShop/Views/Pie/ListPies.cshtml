@model IEnumerable<Pie>
    <html>

    <head>
        <meta charset="utf-8">
        <meta name="author" content="">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>The Pie Shop</title>
    </head>
    <body>
        @foreach(var pieIndex in Model)
        {
        <div>
            <h2>@pieIndex.Name</h2>
            <h2>@pieIndex.Price.ToString("C")</h2>
            <h2>@pieIndex.Category.CategoryName</h2>
        </div>
        }
    </body>

</html>
