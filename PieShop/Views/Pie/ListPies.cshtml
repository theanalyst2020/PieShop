@model ListPiesViewModel
<!--model IEnumerable<Pie>-->

<html>

<head>
    <meta charset="utf-8">
    <meta name="author" content="">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>The Pie Shop</title>
</head>
<body>
    <!--ViewBag.availableCakes -->
    <h1> @Model.AvailableCakes     @Model.CurrentCategory </h1>


    @foreach (var pieIndex in Model.AllPies)
    {

        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@pieIndex.ImageThumbnailUrl" alt="" />
                <div class="caption">
                    <h3 class="pull-right">@pieIndex.Price.ToString("c")</h3>
                    <h3> <a>@pieIndex.Name</a></h3>
                    <p>@pieIndex.ShortDescription</p>
                </div>
            </div>

        </div>

    }
</body>

</html>
